<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <table>
      <thead>
        <tr>
          <th>Time</th>
          <th>Event</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% rows.each do |row| %>
          <tr>
            <td><%= row[:time].strftime('%Y-%m-%d %H:%M') %></td>
            <td><%= row[:type] %></td>
            <td><a href="<%= row[:url] %>"><%= row[:text] %></a></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</html>
